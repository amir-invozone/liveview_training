<div class="survey-component-container">
  <h4><%= @game.name %></h4>
    <.form
      let={f}
      for={@changeset}
      phx-change="validate"
      phx-submit="save"
      phx_target={@myself}
      id={@id}>
 
      <%= label f, :rating%>
      <%= select f, :rating, Enum.reverse(1..5) %>
      <%= error_tag f, :rating %>
 
      <%= hidden_input f, :user_id%>
      <%= hidden_input f, :game_id%>
 
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </.form>
</div>